{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "es5",
            "es2015",
            "es2016"
        ],
        "jsx": "react",
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "react-declarative-form": [
                "./src"
            ],
            "@components": ["src/components/index"],
            "@rules": ["src/rules/index"],
            "@types": ["src/types/index"],
            "@utils": ["src/utils/index"],
            "@validator": ["src/validator/index"],
        },
        "noImplicitReturns": false,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": false,
        "noUnusedLocals": true,
        "sourceMap": true,
        "allowJs": false,
        "declaration": true
    },
    "include": [
        "./src/**/*",
        "./example/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}