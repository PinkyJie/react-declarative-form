{
    "name": "react-form-validator",
    "version": "0.0.1",
    "description": "Simple react form validation",
    "main": "./lib/index.js",
    "repository": "valendres/react-form-validator",
    "author": {
        "name": "Peter Weller",
        "email": "contact@peterweller.com.au",
        "url": "https://github.com/valendres"
    },
    "license": "MIT",
    "private": false,
    "scripts": {
        "clean": "rimraf dist",
        "copy": "cpx ./package.json ./dist && cpx .npmignore ./dist",
        "start": "webpack-dev-server --hot",
        "test": "jest --silent",
        "prettier": "prettier --write \"?(src|example|test)/**/*.ts?(x)\"",
        "build": "tsc --sourceMap false",
        "prebuild": "yarn install && yarn run clean",
        "postbuild": "mv ./dist/src ./dist/lib",
        "prepackage": "yarn run build && yarn run copy",
        "package": "cd ./dist && yarn pack",
        "precommit": "yarn run test --coverage=0 && lint-staged"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "@types/classnames": "^2.2.3",
        "@types/enzyme": "^3.1.10",
        "@types/enzyme-adapter-react-16": "^1.0.2",
        "@types/jest": "^22.2.3",
        "@types/react": "^16.3.12",
        "@types/react-dom": "^16.0.5",
        "@types/validator": "^9.4.1",
        "@types/zxcvbn": "^4.4.0",
        "awesome-typescript-loader": "^5.0.0",
        "cpx": "^1.5.0",
        "css-loader": "^0.28.11",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "file-loader": "^1.1.11",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^0.14.3",
        "jest": "^22.4.3",
        "lint-staged": "^7.0.4",
        "material-ui": "^1.0.0-beta.44",
        "open-browser-webpack-plugin": "^0.0.5",
        "postcss-loader": "^2.1.4",
        "prettier": "^1.12.1",
        "react": "^16.3.2",
        "react-dom": "^16.3.2",
        "react-hot-loader": "^4.1.2",
        "rimraf": "^2.6.2",
        "source-map-loader": "^0.2.3",
        "style-loader": "^0.21.0",
        "ts-jest": "^22.4.4",
        "tslint": "^5.9.1",
        "tslint-config-airbnb": "^5.8.0",
        "tslint-config-prettier": "^1.12.0",
        "tslint-react": "^3.5.1",
        "typeface-roboto": "^0.0.54",
        "typescript": "^2.8.3",
        "webpack": "^4.6.0",
        "webpack-cli": "^2.0.15",
        "webpack-dev-server": "^3.1.3",
        "webpack-hot-middleware": "^2.22.1",
        "zxcvbn": "^4.4.2"
    },
    "peerDependencies": {
        "react": ">=0.16.3",
        "react-dom": "^16.3.2"
    },
    "dependencies": {
        "validator": "^9.4.1"
    },
    "jest": {
        "setupTestFrameworkScriptFile": "<rootDir>/test/setup.ts",
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(<rootDir>/src/.*|(\\.|/)(test))\\.tsx?$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "collectCoverage": false,
        "collectCoverageFrom": [
            "!src/**/*.test.{.ts,tsx}",
            "src/**/*.{.ts,tsx}"
        ]
    }
}
